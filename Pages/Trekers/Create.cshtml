@page
@model Planer1.Pages.Trekers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>ДобавитьТрекер</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Treker.IdStage" class="control-label"></label>
                <select asp-for="Treker.IdStage" class ="form-control" asp-items="ViewBag.IdStage"></select>
            </div>
            <div class="form-group">
                <label asp-for="Treker.Day" class="control-label"></label>
                <input asp-for="Treker.Day" class="form-control" />
                <span asp-validation-for="Treker.Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Treker.Status" class="control-label"></label>
                <input asp-for="Treker.Status" class="form-control" />
                <span asp-validation-for="Treker.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
