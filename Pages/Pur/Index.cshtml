@page
@model Planer1.Pages.Pur.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h4 class="d-flex justify-content-center align-items-center">
    <span class="text-primary">Цели</span>
</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Purpose[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purpose[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purpose[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purpose[0].IdSectorNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Purpose) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSectorNavigation.Namesector)
            </td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.IdPurpose">Изменить</a>
                    @*<a asp-page="./Details" asp-route-id="@item.IdPurpose">Подробнее</a>*@
                    <a asp-page="./Delete" asp-route-id="@item.IdPurpose">Удалить</a>
                </td>
        </tr>
}
    </tbody>
</table>
<form>
    <div class="card col-md-12">
        <button asp-page="Create" class="btn btn-outline-success">Добавить</button>
    </div>
</form>